extends layout

block content
	.logo
		img(src='/images/LogoGlasses150.png', alt='')
	// end logo
	#nav
		ul
			li
				a(href='/') HOME
			li
				a(href='/apps') APPS
				|                       
				img(src='/images/apps.png', alt='')
			|                   
			li
				a(href='/services') SERVICES
				|                       
				img(src='/images/services.png', alt='')
			|                   
			li
				a(href='/about') ABOUT
				|                       
				img(src='images/about.png', alt='')
			|                   
			li
				a(href='/contact') CONTACT
				|                       
				img(src='/images/contact.png', alt='')
			|
			li
				a(href='/recentprojects') PROJECTS
	#mainWindow.col-md-12
		#postWindow
			if posts
				each post, i in posts
					.posts
						.postImgHeader 
							img(src='/images/' + post.mainimage)
						p.postTitle
							a(href='/posts/show/' + post._id)
								=post.title
						.meta 
							p.posted 
								em posted in
							a.postCategory(href='/categories/show/' + post.category) #{post.category}
							.postAuthor #{post.author}
							.postDate #{moment(post.date).format("MM-DD-YYYY")}
						.postText
							!=truncateText(post.body,100) 
							a.myReadMoreBtn(href='/posts/show/' + post._id) Read More
