extends recentProjectLayout

block content
  .logo
    img(src='images/LogoGlasses150.png', alt='')
  // end logo
  #nav
    ul
      li
        a(href='/') HOME
      li
        a(href='/apps') APPS
        |                       
        img(src='images/apps.png', alt='')
      |                   
      li
        a(href='/services') SERVICES
        |                       
        img(src='images/services.png', alt='')
      |                   
      li
        a(href='/about') ABOUT
        |                       
        img(src='images/about.png', alt='')
      |                   
      li
        a(href='/contact') CONTACT
        |                       
        img(src='images/contact.png', alt='')
      |
      li
        a(href='/posts') BLOG
      li
        a(href='/recentprojects') PROJECTS                         
  // end nav
  #mainWindow.row
    .recentProjectContainer
      if projects
        each project, i in projects
          .projectContainer
            .displayBoxSmall.col-md-4
              img(src='/images/' + project.mainimage)
              p.projectTitle
                =project.title
              .divider
              p.projectDescription
                !=truncateText(project.body,150)
              a.projectLearnMoreBtn(href='/recentprojects/show/' + project._id) Read More
